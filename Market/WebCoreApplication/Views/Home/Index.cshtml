@model IEnumerable<WebCoreApplication.Models.Product>

@{
    ViewData["Title"] = ViewBag.Title;
    Layout = "_ViewStart";
}

<h2>@ViewBag.Title</h2>

<h3 class="text-center">Продукты</h3>
<table class="table table-bordered table-striped">
    <thead style="color: mediumslateblue;text-transform: uppercase; font-weight: bold; text-decoration:underline"><tr><td>Name</td><td>Price</td></tr>
    </thead>
    <tbody>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.Name</td>
            <td>@($"{p.Price:C2}")</td>
        </tr>
    }

    </tbody>
</table>
<div class="text-center">
    @Html.ActionLink("Добавить продукт", "AddProduct", "Home",null,  new { @class = "btn btn-primary" })
</div>
