@model WebCoreApplication.Models.Product

<div class="card card-header m-1 p-1">
    <div class="bg-light p-1">
        <h4>
            <strong class="col-form-label">@Model.Name</strong>
            <span class="badge badge-pill badge-primary" style="float: right">@($"{Model.Price:C2}")</span>
            <br />
        </h4>
        <form id="@Model.Id" asp-action="AddToCart" asp-controller="Cart" method="post">
            <input type="hidden" asp-for="Id"/>
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()"/>
            <span class="lead">
                @Model.Description
                <button type="submit" class="btn btn-success btn-sm float-sm-right">
                    В корзину
                </button>
                <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            </span>
        </form>
    </div>
</div>
