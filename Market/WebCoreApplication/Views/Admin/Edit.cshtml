@model WebCoreApplication.Models.Product

@{
    ViewBag.Title = $"Изменение товара: {Model.Name}";
    Layout = "_LayoutAdmin";
}

<form asp-action="Edit" method="post">
    <input type= "hidden" asp-for="Id" />
    <div class="form-group">
        <label>@Html.LabelFor(m => m.Name)</label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input asp-for="Name" class="form-control">
    </div>
    <div class="form-group">
        <label>@Html.LabelFor(m => m.Description)</label>
        <div><span asp-validation-for="Description" class="text-danger"></span></div>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">

        <label>@Html.LabelFor(m => m.Category)</label>
        <div><span asp-validation-for="Category" class="text-danger"></span></div>
        <input asp-for="Category" class="form-control">
    </div>
    <div class="form-group">
        <label>@Html.LabelFor(m => m.Price)</label>
        <div><span asp-validation-for="Price" class="text-danger"></span></div>
        <input asp-for="Price" class="form-control">
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Сохранить и закрыть</button>
        <a asp-action="Index" class="btn btn-secondary">Закрыть без сохранения</a>
    </div>
</form>
